<%- include('../include/_header') %>
    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800"><i class="fa fa-book"></i> Orders</h1>
        <p class="mb-4">Orders, View Orders, Change tracking Status</p>

        <!-- DataTables Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold">List of Orders</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" style="text-align: center;">
                        <thead>
                            <tr>
                                <th style="width: 3%;">No</th>
                                <th>Status</th>
                                <th>Order ID</th>
                                <th>Time</th>
                                <th>Table</th>
                                <th>Type</th>
                                <th>Total Quantity x Total Price</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>             
                            <% for(var i = 0;i<orders.length; i++) { %>
                            <tr>
                                <td><%= (i+1) %></td>
                                <td class="<%- (orders[i].status).toString().toLowerCase() %>"><%= orders[i].status %></td>
                                <td><%= orders[i]._id %></td>
                                <td><%= orders[i].timestamp %></td>
                                <td><%= orders[i].table || '--' %></td>
                                <td><%= orders[i].type %></td>
                                <td><%= orders[i].totalQuantity %> x RM<%= orders[i].totalPrice %></td>
                                <td>
                                    <a href="/staff/manage_order/<%= orders[i]._id %>" class="btn btn-primary btn-circle btn-sm"><span class="icon text-white">
                                        <i class="fa fa-arrow-right"></i>
                                    </span> </a>
                                </td>
                            </tr>
                            <% } %>   
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->
<%- include('../include/_footer') %>