<body class="bg-secondary">
    <div class="container" >

        <!-- Outer Row -->
        <div class="row justify-content-center" >

            <div class="col-l-5 col-m-6" style="margin-top: 10%;" >

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Aicilian Restaurant Management System</h1>
                                    </div>

                                    <form id="login" method="POST" class="user">
                                        <div class="form-group">
                                            <input type="email" name="email" id="email" class="form-control form-control-user" placeholder="Email" required>
                                        </div>
                                        <div class="form-group">
                                            <input type="password" name="password" id="password" class="form-control form-control-user" placeholder="Password" required>
                                        </div>
                                        <input type="submit" value="Login" class="btn btn-success btn-user btn-block"/>
                                    </form>

                                    <hr>
                                    <div class="text-center">
                                        <a id="message">
                                            <%= message %>
                                        </a><br>
                                        <a class="small" href="forgot">Forgot Password?</a>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
